<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="10dp">

        <ImageView
            android:id="@+id/etSpecialityNameTitle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:clickable="false"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:text="Neurology"
            android:textColor="@color/dim_gray"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/llMessage"
            android:layout_width="match_parent"
            android:clickable="false"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/etSpecialityNameTitle"
            android:orientation="vertical">

            <TextView
                android:id="@+id/etFacilityName"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_session"
                android:textColor="@color/dim_gray"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/etName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="date"
                android:textColor="@color/dim_gray"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/etTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/ivNext"
            android:text="date"
            android:textColor="@color/dim_gray"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/ivNext"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:clickable="false"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:tint="@color/colorAccent"
            app:srcCompat="@drawable/ic_arow_next">

        </ImageView>
    </RelativeLayout>
</LinearLayout>